<div class= "container"><h3><%= @restaurant.name%></h3>
<%=@restaurant.address%>
<p><%=@restaurant.category%></p>

<p><%=link_to "Back to restaurants list", restaurants_path%></p>



<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
<%end%>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :content%>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>